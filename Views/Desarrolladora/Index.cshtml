@using JavierSanchezProyectoCore.Models
@model ICollection<Desarrolladora>

@{ 
    <a class="btn btn-info" asp-controller="Desarrolladora" asp-action="Create">Añadir Desarrolladora</a>
    if (Model.Count() < 1)
    {
        <p>No hay Desarrolladoras </p>
    }
    else
    {

        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Logo</th>
                    <th>Pagina</th>
                    <th></th>

                </tr>
            </thead>
            <tbody>
                @foreach (Desarrolladora desarrolladora in Model)
                {
                    <tr>
                        <td>@desarrolladora.DesarrolladoraId</td>
                        <td>@desarrolladora.Nombre</td>
                        <td><img src="~/images/@desarrolladora.Logo" width="25"/></td>
                        <td>@desarrolladora.Pagina</td>
                        <td></td>


                    </tr>
                }

            </tbody>
        </table>
        }
       
}