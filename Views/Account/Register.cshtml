@using Identity.School.App.ViewModels
@model AccountRegisterViewModel

<h2>User Registration</h2>
<form id="form" class="form-group" asp-action="Register" asp-controller="Account" method="post">
    <div asp-validation-summary="All"></div>
    <label class="form-label" asp-for="Email"></label>
    <input class="form-control" asp-for="Email" />
    <span class="text-red" asp-validation-for="Email"></span>
    <br />
    <label class="form-label" asp-for="Password"></label>
    <input class="form-control" asp-for="Password" />
    <span class="text-red" asp-validation-for="Password"></span>
    <br />
    <label class="form-label" asp-for="ConfirmPassword"></label>
    <input class="form-control" asp-for="ConfirmPassword" />
    <span class="text-red" asp-validation-for="ConfirmPassword"></span>
    <br />
    <input class="btn btn-primary" asp-for="Role" type="submit" value="Cliente" />
    <input class="btn btn-primary" asp-for="Role" type="submit" value="Desarrolladora" />


</form>
