@using JavierSanchezProyectoCore.Models
@model ICollection<Cliente>

@{
    <a class="btn btn-info" asp-controller="Cliente" asp-action="Create">Añadir Cliente</a>
    if (Model.Count() < 1)
    {
        <p>No hay Clientes </p>
    }
    else
    {

        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nickname</th>
                    <th>Nombre</th>
                    <th>Apellidos</th>
                    <th>Email</th>
                    <th></th>

                </tr>
            </thead>
            <tbody>
                @foreach (Cliente cliente in Model)
                {
                    <tr>
                        <td>@cliente.ClienteId</td>
                        <td>@cliente.Nickname</td>
                        <td>@cliente.Nombre</td>
                        <td>@cliente.Apellidos</td>
                        <td>@cliente.User.Email</td>
                        <td></td>


                    </tr>
                }

            </tbody>
        </table>
    }

}